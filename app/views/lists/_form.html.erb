<%= form_for(@list) do |f| %>
  <div class='form-group'><%= f.label :body, 'List your gems:' %><br />
  <%= f.text_area :body, autofocus: true, class: 'form-control' %></div>
  <div class='form-group'><%= f.label :url, 'File to watch for changes:' %><br />
  <%= f.text_field :url, autofocus: true, class: 'form-control' %></div>
  <div><%= f.submit "Save", class: 'btn btn-success' %></div>
<% end %>
